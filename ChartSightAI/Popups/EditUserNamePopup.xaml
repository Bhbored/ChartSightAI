<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="ChartSightAI.Popups.EditUserNamePopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Padding="16,0,16,0"
    Background="{StaticResource Brush.BackgroundGradient}"
    CanBeDismissedByTappingOutsideOfPopup="True"
    HeightRequest="300"
    Shadow="{StaticResource CardShadow}"
    WidthRequest="300">



    <VerticalStackLayout Spacing="12">

        <Label StyleClass="h3" Text="Update your name" />
        <Label StyleClass="ai-caption" Text="This name appears in your profile and analytics." />

        <sf:SfTextInputLayout
            ContainerType="Outlined"
            HeightRequest="100"
            Hint="Your name"
            Stroke="Cyan">
            <Entry
                x:Name="NameEntry"
                ClearButtonVisibility="WhileEditing"
                FontSize="14"
                Text="{Binding UserName, Mode=TwoWay}" />
        </sf:SfTextInputLayout>

        <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
            <Button
                Clicked="Cancel_Clicked"
                StyleClass="btn-ghost-flat"
                Text="Cancel" />
            <Button
                Grid.Column="1"
                Clicked="Save_Clicked"
                StyleClass="btn-primary"
                Text="Save" />
        </Grid>
    </VerticalStackLayout>
</toolkit:Popup>
