<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChartSightAI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ChartSightAI.MVVM.Views"
    Shell.TabBarIsVisible="False">
    <ShellContent
        ContentTemplate="{DataTemplate views:LoadingPage}"
        Route="LoadingPage"
        Shell.FlyoutItemIsVisible="False"
        Shell.NavBarIsVisible="False" />
    <ShellContent
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage"
        Shell.FlyoutItemIsVisible="False"
        Shell.NavBarIsVisible="False" />
    <ShellContent
        ContentTemplate="{DataTemplate views:SignUpPage}"
        Route="SignUpPage"
        Shell.FlyoutItemIsVisible="False"
        Shell.NavBarIsVisible="False" />
    <TabBar>
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage" />
        <ShellContent ContentTemplate="{DataTemplate views:Analytics}" Route="Analytics" />
        <ShellContent ContentTemplate="{DataTemplate views:NewPrediction}" Route="NewPrediction" />
        <ShellContent ContentTemplate="{DataTemplate views:Presets}" Route="Presets" />
        <ShellContent ContentTemplate="{DataTemplate views:Profile}" Route="Profile" />
    </TabBar>



</Shell>
