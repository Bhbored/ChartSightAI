<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="ChartSightAI.Controls.TABBAR"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Local-only resources; font = NexaHeavy  -->
    <ContentView.Resources>
        <!--  Colors  -->
        <Color x:Key="TabBarBg">#FFFFFFFF</Color>
        <Color x:Key="TabIcon">#7E8A98</Color>
        <Color x:Key="TabText">#5A6673</Color>
        <Color x:Key="BadgeRed">#FF3B30</Color>

        <!--  Shadows  -->
        <Shadow
            x:Key="SoftShadow"
            Brush="#33000000"
            Opacity="0.55"
            Radius="28"
            Offset="0,10" />

        <!--  Gradients  -->
        <LinearGradientBrush x:Key="TealCapsuleGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.0" Color="#37E6D7" />
            <GradientStop Offset="1.0" Color="#00C4FF" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="TealFabGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.0" Color="#00E0D6" />
            <GradientStop Offset="1.0" Color="#12A9FF" />
        </LinearGradientBrush>

        <!--  Label styles (NexaHeavy)  -->
        <Style x:Key="TabTextStyle" TargetType="Label">
            <Setter Property="FontFamily" Value="NexaHeavy" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="{StaticResource TabText}" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
        </Style>

        <Style
            x:Key="TabTextActiveStyle"
            BasedOn="{StaticResource TabTextStyle}"
            TargetType="Label">
            <Setter Property="TextColor" Value="White" />
        </Style>
    </ContentView.Resources>

    <Grid VerticalOptions="Center">

        <!--  Floating pill bar  -->
        <Border
            Margin="16,0,16,0"
            Background="{StaticResource Brush.CardBgGradient}"
            HeightRequest="80"
            HorizontalOptions="Center"
            Shadow="{StaticResource SoftShadow}"
            StrokeShape="RoundRectangle 35"
            VerticalOptions="Center"
            WidthRequest="400">

            <!--  4 logical columns (Home, Analysis, Presets, Profile)  -->
            <Grid ColumnDefinitions="*,*,*,*" VerticalOptions="Center">

                <!--  Home  -->
                <Grid Grid.Column="0">
                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        Spacing="6"
                        VerticalOptions="Center">
                        <!--  replace with your icon  -->
                        <Image
                            HeightRequest="22"
                            Source="home.png"
                            WidthRequest="22" />
                        <Label Style="{StaticResource TabTextStyle}" Text="Home" />
                    </VerticalStackLayout>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateCommand}" CommandParameter="//HomePage" />
                    </Grid.GestureRecognizers>
                </Grid>

                <!--  Analysis (ACTIVE)  -->
                <Grid Grid.Column="1">
                    <Border
                        Background="{StaticResource TealCapsuleGradient}"
                        HeightRequest="65"
                        HorizontalOptions="Center"
                        StrokeShape="RoundRectangle 40"
                        StrokeThickness="0"
                        WidthRequest="120">
                        <!--  Ensure the Border itself is centered  -->
                        <!--  Center the content inside the active tab border  -->
                        <VerticalStackLayout
                            Margin="0,0,40,0"
                            HorizontalOptions="Center"
                            Spacing="8"
                            VerticalOptions="Center">
                            <Image
                                HeightRequest="22"
                                Source="analytics.png"
                                WidthRequest="22" />
                            <Label Style="{StaticResource TabTextActiveStyle}" Text="Analysis" />
                        </VerticalStackLayout>
                    </Border>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateCommand}" CommandParameter="//Analytics" />
                    </Grid.GestureRecognizers>
                </Grid>

                <!--  Presets + red badge  -->
                <Grid Grid.Column="2" Margin="30,0,0,0">
                    <Grid>
                        <VerticalStackLayout
                            HorizontalOptions="Center"
                            Spacing="6"
                            VerticalOptions="Center">
                            <Image
                                HeightRequest="22"
                                Source="preset.png"
                                WidthRequest="22" />
                            <Label Style="{StaticResource TabTextStyle}" Text="Presets" />
                        </VerticalStackLayout>

                        <Border
                            Background="{StaticResource BadgeRed}"
                            HeightRequest="16"
                            HorizontalOptions="Center"
                            StrokeShape="Ellipse"
                            StrokeThickness="0"
                            TranslationX="18"
                            TranslationY="0"
                            VerticalOptions="Start"
                            WidthRequest="16">
                            <Label
                                FontFamily="NexaHeavy"
                                FontSize="10"
                                HorizontalTextAlignment="Center"
                                Text="1"
                                TextColor="White"
                                VerticalTextAlignment="Center" />
                        </Border>
                    </Grid>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateCommand}" CommandParameter="//Presets" />
                    </Grid.GestureRecognizers>
                </Grid>

                <!--  Profile  -->
                <Grid Grid.Column="3">
                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        Spacing="6"
                        VerticalOptions="Center">
                        <Image
                            HeightRequest="22"
                            Source="profile.png"
                            WidthRequest="22" />
                        <Label Style="{StaticResource TabTextStyle}" Text="Profile" />
                    </VerticalStackLayout>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateCommand}" CommandParameter="//Profile" />
                    </Grid.GestureRecognizers>

                </Grid>


            </Grid>
        </Border>

        <!--  Center + button with white ring, overlapping pill  -->
        <!--  White ring  -->
        <Border
            Background="White"
            HeightRequest="80"
            HorizontalOptions="Center"
            Shadow="{StaticResource SoftShadow}"
            StrokeShape="Ellipse"
            StrokeThickness="0"
            VerticalOptions="Center"
            WidthRequest="80">
            <Border
                Background="{StaticResource TealFabGradient}"
                HeightRequest="75"
                HorizontalOptions="Center"
                StrokeShape="Ellipse"
                StrokeThickness="0"
                VerticalOptions="Center"
                WidthRequest="75">
                <Grid>
                    <Label
                        FontFamily="NexaHeavy"
                        FontSize="34"
                        HorizontalTextAlignment="Center"
                        Text="+"
                        TextColor="White"
                        VerticalTextAlignment="Center" />
                </Grid>
            </Border>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateCommand}" CommandParameter="//NewPrediction" />
            </Border.GestureRecognizers>
        </Border>

        <!--  Gradient circle on top  -->

    </Grid>

</ContentView>