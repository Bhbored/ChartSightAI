<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>

<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">



    <!--  ===== Palette (keeps your keys) =====  -->
    <Color x:Key="Primary">#00D4B5</Color>
    <Color x:Key="Secondary">#E8F9F5</Color>
    <Color x:Key="TextDark">#2D3748</Color>
    <Color x:Key="TextLight">#718096</Color>
    <Color x:Key="Border">#B2F0E6</Color>
    <Color x:Key="CardBg">#FFFFFF</Color>
    <Color x:Key="Ok">#16A34A</Color>
    <Color x:Key="Warn">#F59E0B</Color>
    <Color x:Key="Muted">#E5E7EB</Color>

    <!--  ===== Brushes / Gradients =====  -->
    <LinearGradientBrush x:Key="Brush.ButtonGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#00D4B5" />
        <GradientStop Offset="1" Color="#6FFFE9" />
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Brush.CardBgGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#FFFFFF" />
        <GradientStop Offset="1" Color="#E8F9F5" />
    </LinearGradientBrush>

    <!--  ===== Background Gradient =====  -->
    <LinearGradientBrush x:Key="Brush.BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#CCFFFF" />
        <!--  Soft cyan top  -->
        <GradientStop Offset="0.7" Color="#F8FFFF" />
        <!--  Almost white, slightly tinted  -->
        <GradientStop Offset="1.0" Color="White" />
        <!--  Pure white bottom  -->
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="Brush.HeaderGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#E8F9F5" />
        <GradientStop Offset="0.3" Color="#CCFFFF" />
        <GradientStop Offset="0.6" Color="#6FFFE9" />
        <GradientStop Offset="1" Color="#00D4B5" />

    </LinearGradientBrush>
    <!--  ===== Shadows =====  -->
    <Shadow
        x:Key="Sh.CardShadow"
        Brush="{StaticResource Primary}"
        Opacity="0.15"
        Radius="15"
        Offset="0,5" />


    <!--#region Fonts-->
    <!--  ===== Root typefaces =====  -->
    <!--  Implicit: every Label uses NexaLight by default  -->
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="NexaLight" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!--  Bold helper when you just want heavy font quickly  -->
    <Style Class="bold" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaHeavy" />
    </Style>

    <!--  ===== Typography scales =====  -->
    <Style Class="h1" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaHeavy" />
        <!--  Heavy font  -->
        <Setter Property="FontSize" Value="32" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="Margin" Value="0,10,0,5" />
    </Style>

    <Style Class="h2" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaHeavy" />
        <!--  Heavy font  -->
        <Setter Property="FontSize" Value="28" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="Margin" Value="0,10,0,5" />
    </Style>

    <Style Class="h3" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaHeavy" />
        <!--  Heavy font  -->
        <Setter Property="FontSize" Value="24" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="Margin" Value="0,8,0,4" />
    </Style>

    <Style Class="h4" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaHeavy" />
        <!--  Heavy font  -->
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="Margin" Value="0,6,0,3" />
    </Style>

    <Style Class="body" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaLight" />
        <!--  Light font  -->
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <Style Class="caption" TargetType="Label">
        <Setter Property="FontFamily" Value="NexaLight" />
        <!--  Light font  -->
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>
    <!--#endregion-->

    <!--#region HomePage-->

    <Style Class="CardStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBg}" />
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="StrokeShape" Value="RoundRectangle 20" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Shadow" Value="{StaticResource Sh.CardShadow}" />
    </Style>

    <Style Class="ButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontFamily" Value="NexaHeavy" />
        <Setter Property="Padding" Value="20,10" />
        <Setter Property="Margin" Value="0,20,0,10" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>
    <!--#endregion-->


    <!--#region Analytics-->

    <!--  ========== REGION: NewAnalysis helpers ==========  -->

    <!--  Card / modal container  -->
    <Style Class="na-card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBg}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="50,50,0,0" />
            </Setter.Value>
        </Setter>
        <Setter Property="Shadow" Value="{StaticResource Sh.CardShadow}" />
    </Style>

    <!--  Gradient CTA  -->
    <Style Class="na-cta" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Brush.ButtonGradient}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="28" />
        <Setter Property="HeightRequest" Value="52" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Shadow" Value="{StaticResource Sh.CardShadow}" />
    </Style>

    <!--  Segmented chips  -->
    <Style Class="na-chip" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="{StaticResource Border}" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Margin" Value="0,0,8,8" />
        <Setter Property="MinimumWidthRequest" Value="76" />
    </Style>

    <Style Class="na-chip-selected" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Brush.ButtonGradient}" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <!--  Small badges  -->
    <Style Class="na-badge" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Brush.ButtonGradient}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="0,0,8,8" />
    </Style>

    <!--  Field wrapper (Picker etc.)  -->
    <Style Class="na-field" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBg}" />
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="12,8" />
    </Style>

    <Style Class="na-picker" TargetType="Picker">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="HeightRequest" Value="36" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
    </Style>

    <!--  Dropzone  -->
    <Style Class="na-dropzone" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Secondary}" />
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="16" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="16" />
    </Style>

    <!--  Options card  -->
    <Style Class="na-checkcard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBg}" />
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="14" />
        <Setter Property="Shadow" Value="{StaticResource Sh.CardShadow}" />
    </Style>

    <!--  Switch  -->
    <Style Class="na-switch" TargetType="Switch">
        <Setter Property="Scale" Value="1.05" />
        <Setter Property="OnColor" Value="{StaticResource Primary}" />
        <Setter Property="ThumbColor" Value="White" />
    </Style>

    <!--  Icon holder  -->
    <Style Class="na-pill" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Secondary}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="12" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="10" />
    </Style>

    <!--  One-line labels  -->
    <Style Class="na-nowrap" TargetType="Label">
        <Setter Property="LineBreakMode" Value="NoWrap" />
    </Style>

    <!--  ========== END REGION ==========  -->



    <!--#endregion-->

    <!--#region AI RESPONSE sheet-->
    <!--  ===== Card =====  -->
    <Style Class="ai-card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.CardBgGradient}" />
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 22" />
        <Setter Property="Padding" Value="18,14" />
    </Style>

    <!--  ===== Sheet header =====  -->
    <Style Class="ai-sheet-header" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.HeaderGradient}" />
        <Setter Property="StrokeShape" Value="RoundRectangle 24" />
        <Setter Property="Padding" Value="16,14" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <!--  ===== Titles / text (combine with your h* classes) =====  -->
    <Style Class="ai-section-title" TargetType="Label">
        <Setter Property="Margin" Value="0,0,0,6" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
    </Style>
    <Style Class="ai-body" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
    </Style>
    <Style Class="ai-caption" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextLight}" />
    </Style>

    <!--  ===== CTAs =====  -->
    <Style Class="ai-cta" TargetType="Button">
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="CornerRadius" Value="18" />
        <Setter Property="Background" Value="{StaticResource Brush.ButtonGradient}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontFamily" Value="NexaHeavy" />
        <Setter Property="FontSize" Value="16" />
    </Style>
    <Style Class="ai-cta-secondary" TargetType="Button">
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="CornerRadius" Value="18" />
        <Setter Property="Background" Value="{StaticResource Secondary}" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="FontFamily" Value="NexaHeavy" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!--  ===== Chips/Badges =====  -->
    <Style Class="ai-tag" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Secondary}" />
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 25" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="Margin" Value="0,6,6,0" />
    </Style>
    <Style Class="ai-badge" TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 20" />
        <Setter Property="Padding" Value="10,6" />
    </Style>

    <!--  ===== Icon chip (circle) & line icon style =====  -->
    <Style Class="ai-iconchip" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Secondary}" />
        <Setter Property="StrokeShape" Value="RoundRectangle 999" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Margin" Value="0,0,8,0" />
    </Style>
    <Style Class="ai-icon" TargetType="Path">
        <Setter Property="Stroke" Value="{StaticResource Primary}" />
        <Setter Property="StrokeThickness" Value="1.8" />
        <Setter Property="Aspect" Value="Uniform" />
        <Setter Property="HeightRequest" Value="20" />
        <Setter Property="WidthRequest" Value="20" />
    </Style>
    <!--  FABs  -->
    <Style Class="ai-fab" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Brush.ButtonGradient}" />
        <Setter Property="StrokeShape" Value="RoundRectangle 999" />
        <Setter Property="WidthRequest" Value="56" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="Shadow" Value="{StaticResource Sh.CardShadow}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style Class="ai-fab-ghost" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Secondary}" />
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 999" />
        <Setter Property="WidthRequest" Value="56" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="Shadow" Value="{StaticResource Sh.CardShadow}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style Class="ai-fab-icon" TargetType="Path">
        <Setter Property="Stroke" Value="White" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="Aspect" Value="Uniform" />
        <Setter Property="HeightRequest" Value="22" />
        <Setter Property="WidthRequest" Value="22" />
    </Style>
    <!--  Sticky action bar (bottom of the sheet)  -->
    <Style Class="ai-actionbar" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Secondary}" />
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 20" />
        <Setter Property="HeightRequest" Value="64" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Shadow" Value="{StaticResource Sh.CardShadow}" />
    </Style>


    <!--#endregion-->

    <!--#region History-->
    <!--  Flat ghost circle (no shadow) for the top-right + button  -->
    <Style Class="ai-fab-ghost-flat" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource Secondary}" />
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="RoundRectangle 999" />
        <Setter Property="WidthRequest" Value="40" />
        <Setter Property="HeightRequest" Value="40" />
        <!--  no Shadow here on purpose  -->
    </Style>

    <!--  Swipe pills (compact)  -->
    <Style Class="ai-swipe-pill" TargetType="Border">
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="Padding" Value="14,8" />
        <Setter Property="StrokeShape" Value="RoundRectangle 999" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!--  Icon inside swipe pills  -->
    <Style Class="ai-swipe-icon" TargetType="Path">
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="HeightRequest" Value="18" />
        <Setter Property="WidthRequest" Value="18" />
        <Setter Property="Aspect" Value="Uniform" />
    </Style>

    <!--#endregion-->
</ResourceDictionary>




