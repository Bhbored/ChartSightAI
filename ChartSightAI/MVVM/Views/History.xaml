<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ChartSightAI.MVVM.Views.History"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Pages="clr-namespace:ChartSightAI.MVVM.Views"
    xmlns:conv="clr-namespace:ChartSightAI.Converters"
    xmlns:models="clr-namespace:ChartSightAI.MVVM.Models"
    xmlns:vm="clr-namespace:ChartSightAI.MVVM.ViewModels"
    x:DataType="vm:HistoryVM"
    Background="{StaticResource Brush.BackgroundGradient}"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:InverseBoolConverter x:Key="Not" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="16,12,16,12" RowDefinitions="Auto,*">

        <!--  Header  -->
        <Label
            Grid.Row="0"
            Margin="0,0,0,8"
            StyleClass="h2"
            Text="History" />

        <!--  List  -->
        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding Sessions}"
            SelectionMode="None"
            VerticalScrollBarVisibility="Never">
            <CollectionView.EmptyView>
                <Grid Padding="32">
                    <Label
                        HorizontalOptions="Center"
                        Text="No history yet."
                        VerticalOptions="Center" />
                </Grid>
            </CollectionView.EmptyView>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="12" Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:AnalysisSession">
                    <SwipeView>

                        <!--  LEFT: Share  -->
                        <SwipeView.LeftItems>
                            <SwipeItems Mode="Reveal" SwipeBehaviorOnInvoked="Close">
                                <SwipeItemView
                                    BackgroundColor="Transparent"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type Pages:History}}, Path=BindingContext.ShareAnalysisAsyncCommand}"
                                    CommandParameter="{Binding .}">
                                    <SwipeItemView.Content>
                                        <Border Background="{StaticResource Secondary}" StyleClass="ai-swipe-pill">
                                            <Grid ColumnDefinitions="Auto,8,Auto">
                                                <Path
                                                    Data="M6,18 L18,6 M10,6 H18 V14"
                                                    Stroke="{StaticResource Primary}"
                                                    StyleClass="ai-swipe-icon" />
                                                <Label
                                                    Grid.Column="2"
                                                    StyleClass="ai-caption"
                                                    Text="Share" />
                                            </Grid>
                                        </Border>
                                    </SwipeItemView.Content>
                                </SwipeItemView>
                            </SwipeItems>
                        </SwipeView.LeftItems>

                        <!--  RIGHT: Delete  -->
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal" SwipeBehaviorOnInvoked="Close">
                                <SwipeItemView
                                    BackgroundColor="Transparent"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type Pages:History}}, Path=BindingContext.DeleteSessionAsyncCommand}"
                                    CommandParameter="{Binding .}">
                                    <SwipeItemView.Content>
                                        <Border Background="#EF4444" StyleClass="ai-swipe-pill">
                                            <Grid ColumnDefinitions="Auto,8,Auto">
                                                <Path
                                                    Data="M6,6 L18,18 M18,6 L6,18"
                                                    Stroke="White"
                                                    StyleClass="ai-swipe-icon" />
                                                <Label
                                                    Grid.Column="2"
                                                    FontFamily="NexaHeavy"
                                                    Text="Delete"
                                                    TextColor="White"
                                                    VerticalOptions="Center" />
                                            </Grid>
                                        </Border>
                                    </SwipeItemView.Content>
                                </SwipeItemView>
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <!--  CARD  -->
                        <Grid>
                            <Border StyleClass="ai-card">
                                <!--  fixed rails so center never collapses  -->
                                <Grid
                                    Padding="12"
                                    ColumnDefinitions="76,*,76"
                                    RowDefinitions="Auto,Auto">

                                    <!--  left thumbnail  -->
                                    <Border
                                        Grid.RowSpan="2"
                                        Margin="0,0,12,0"
                                        Background="{StaticResource Secondary}"
                                        HeightRequest="64"
                                        StrokeShape="RoundRectangle 16"
                                        StrokeThickness="0"
                                        VerticalOptions="Center"
                                        WidthRequest="64">
                                        <Image
                                            Aspect="AspectFill"
                                            IsAnimationPlaying="True"
                                            Source="{Binding ImagePath}" />
                                    </Border>

                                    <!--  center text  -->
                                    <VerticalStackLayout
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Fill">
                                        <Label
                                            LineBreakMode="TailTruncation"
                                            StyleClass="h4"
                                            Text="{Binding MarketType, StringFormat='Market: {0}'}" />
                                        <Label
                                            LineBreakMode="TailTruncation"
                                            StyleClass="ai-body"
                                            Text="{Binding TimeFrame, StringFormat='Timeframe: {0}'}" />
                                        <Label
                                            LineBreakMode="TailTruncation"
                                            StyleClass="ai-caption"
                                            Text="{Binding CreatedAt, StringFormat='Date: {0:yyyy-MM-dd}'}" />

                                    </VerticalStackLayout>

                                    <!--  status chip bottom-right of CENTER col (keep 76dp gap for right rail)  -->
                                    <VerticalStackLayout
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="2"
                                        HorizontalOptions="End"
                                        Spacing="20"
                                        VerticalOptions="Fill">
                                        <Border
                                            Background="{StaticResource Brush.CardBgGradient}"
                                            HeightRequest="40"
                                            StrokeShape="RoundRectangle 20"
                                            StrokeThickness="0"
                                            WidthRequest="40">
                                            <Image
                                                HeightRequest="20"
                                                Source="plus.png"
                                                WidthRequest="20" />
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type Pages:History}}, Path=BindingContext.RateSessionAsyncCommand}" CommandParameter="{Binding .}" />
                                            </Border.GestureRecognizers>
                                        </Border>
                                        <!--  pending  -->
                                        <Border
                                            Padding="10,6"
                                            Background="{StaticResource Secondary}"
                                            IsVisible="{Binding IsRated, Converter={StaticResource Not}}"
                                            Stroke="{StaticResource Border}"
                                            StrokeShape="RoundRectangle 10"
                                            StrokeThickness="1"
                                            WidthRequest="100">
                                            <HorizontalStackLayout Spacing="5">
                                                <Label Text="â—" WidthRequest="14" />
                                                <Label
                                                    Grid.Column="2"
                                                    StyleClass="ai-caption"
                                                    Text="Result" />
                                            </HorizontalStackLayout>

                                        </Border>

                                        <!--  rated group  -->
                                        <Grid IsVisible="{Binding IsRated}">
                                            <!--  hit  -->
                                            <Border
                                                Padding="10,6"
                                                Background="LightGreen"
                                                IsVisible="{Binding Hit}"
                                                StrokeShape="RoundRectangle 10"
                                                StrokeThickness="0"
                                                WidthRequest="70">
                                                <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                                                    <Label Text="ðŸ‘Š" />
                                                    <Label
                                                        Grid.Column="2"
                                                        StyleClass="ai-caption"
                                                        Text="Hit"
                                                        TextColor="#166534" />
                                                </HorizontalStackLayout>
                                            </Border>

                                            <!--  miss  -->
                                            <Border
                                                Padding="10,6"
                                                Background="Red"
                                                IsVisible="{Binding Hit, Converter={StaticResource Not}}"
                                                StrokeShape="RoundRectangle 10"
                                                StrokeThickness="0"
                                                WidthRequest="90">
                                                <HorizontalStackLayout
                                                    HorizontalOptions="Center"
                                                    Spacing="5"
                                                    VerticalOptions="Center">
                                                    <Label Text="ðŸ˜”" />
                                                    <Label
                                                        StyleClass="ai-caption"
                                                        Text="Miss"
                                                        TextColor="#991B1B" />
                                                </HorizontalStackLayout>
                                            </Border>
                                        </Grid>
                                    </VerticalStackLayout>


                                    <!--  top-right rating (+)  -->


                                </Grid>
                            </Border>
                        </Grid>

                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
