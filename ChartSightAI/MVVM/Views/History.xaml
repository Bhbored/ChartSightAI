<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ChartSightAI.MVVM.Views.History"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Pages="clr-namespace:ChartSightAI.MVVM.Views"
    xmlns:conv="clr-namespace:ChartSightAI.Converters"
    xmlns:models="clr-namespace:ChartSightAI.MVVM.Models"
    xmlns:vm="clr-namespace:ChartSightAI.MVVM.ViewModels"
    x:DataType="vm:HistoryVM"
    Background="{StaticResource Brush.BackgroundGradient}"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:InverseBoolConverter x:Key="Not" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="16,12,16,12" RowDefinitions="Auto,*">

        <!--  Header  -->
        <Label
            Grid.Row="0"
            Margin="0,0,0,8"
            StyleClass="h2"
            Text="History" />

        <!--  List  -->
        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding Sessions}"
            SelectionMode="None"
            VerticalScrollBarVisibility="Never">
            <CollectionView.EmptyView>
                <Grid Padding="32">
                    <Label
                        HorizontalOptions="Center"
                        Text="No history yet."
                        VerticalOptions="Center" />
                </Grid>
            </CollectionView.EmptyView>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="16" Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:AnalysisSession">
                    <SwipeView>

                        <!--  LEFT: Share  -->
                        <SwipeView.LeftItems>
                            <SwipeItems Mode="Reveal" SwipeBehaviorOnInvoked="Close">
                                <SwipeItemView
                                    BackgroundColor="Transparent"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type Pages:History}}, Path=BindingContext.ShareAnalysisAsyncCommand}"
                                    CommandParameter="{Binding .}">
                                    <SwipeItemView.Content>
                                        <Border Background="{StaticResource Secondary}" StyleClass="ai-swipe-pill">
                                            <Grid ColumnDefinitions="Auto,8,Auto">
                                                <Path
                                                    Data="M6,18 L18,6 M10,6 H18 V14"
                                                    Stroke="{StaticResource Primary}"
                                                    StyleClass="ai-swipe-icon" />
                                                <Label
                                                    Grid.Column="2"
                                                    StyleClass="ai-caption"
                                                    Text="Share" />
                                            </Grid>
                                        </Border>
                                    </SwipeItemView.Content>
                                </SwipeItemView>
                            </SwipeItems>
                        </SwipeView.LeftItems>

                        <!--  RIGHT: Delete  -->
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal" SwipeBehaviorOnInvoked="Close">
                                <SwipeItemView
                                    BackgroundColor="Transparent"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type Pages:History}}, Path=BindingContext.DeleteSessionAsyncCommand}"
                                    CommandParameter="{Binding .}">
                                    <SwipeItemView.Content>
                                        <Border Background="#EF4444" StyleClass="ai-swipe-pill">
                                            <Grid ColumnDefinitions="Auto,8,Auto">
                                                <Path
                                                    Data="M6,6 L18,18 M18,6 L6,18"
                                                    Stroke="White"
                                                    StyleClass="ai-swipe-icon" />
                                                <Label
                                                    Grid.Column="2"
                                                    FontFamily="NexaHeavy"
                                                    Text="Delete"
                                                    TextColor="White" />
                                            </Grid>
                                        </Border>
                                    </SwipeItemView.Content>
                                </SwipeItemView>
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <!--  CARD  -->
                        <Grid>
                            <Border StyleClass="ai-card">
                                <!--  fixed rails so center never collapses  -->
                                <Grid
                                    Padding="12"
                                    ColumnDefinitions="76,*,76"
                                    RowDefinitions="Auto,Auto,Auto">

                                    <!--  left thumbnail  -->
                                    <Border
                                        Grid.RowSpan="3"
                                        Margin="0,0,12,0"
                                        Background="{StaticResource Secondary}"
                                        HeightRequest="64"
                                        StrokeShape="RoundRectangle 16"
                                        StrokeThickness="0"
                                        WidthRequest="64">
                                        <Image
                                            Margin="10"
                                            Aspect="AspectFit"
                                            Source="{Binding ImagePath}" />
                                    </Border>

                                    <!--  center text  -->
                                    <Label
                                        Grid.Column="1"
                                        LineBreakMode="TailTruncation"
                                        StyleClass="h4"
                                        Text="{Binding MarketType, StringFormat='Market: {0}'}" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        LineBreakMode="TailTruncation"
                                        StyleClass="ai-body"
                                        Text="{Binding TimeFrame, StringFormat='Timeframe: {0}'}" />
                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        LineBreakMode="TailTruncation"
                                        StyleClass="ai-caption"
                                        Text="{Binding CreatedAt, StringFormat='Date: {0:yyyy-MM-dd}'}" />

                                    <!--  status chip bottom-right of CENTER col (keep 76dp gap for right rail)  -->
                                    <Grid
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="2"
                                        Margin="0,30,0,0"
                                        HorizontalOptions="Center">

                                        <!--  pending  -->
                                        <Border
                                            Padding="10,6"
                                            Background="{StaticResource Secondary}"
                                            IsVisible="{Binding IsRated, Converter={StaticResource Not}}"
                                            Stroke="{StaticResource Border}"
                                            StrokeShape="RoundRectangle 999"
                                            StrokeThickness="1">
                                            <Grid ColumnDefinitions="Auto,6,Auto" VerticalOptions="Center">
                                                <Path
                                                    Data="M12,4 A8,8 0 1 0 12,20 A8,8 0 1 0 12,4 M12,8 V12 L15,14"
                                                    HeightRequest="14"
                                                    Stroke="{StaticResource Primary}"
                                                    StrokeThickness="2"
                                                    WidthRequest="14" />
                                                <Label
                                                    Grid.Column="2"
                                                    StyleClass="ai-caption"
                                                    Text="AI result not submitted" />
                                            </Grid>
                                        </Border>

                                        <!--  rated group  -->
                                        <Grid IsVisible="{Binding IsRated}">
                                            <!--  hit  -->
                                            <Border
                                                Padding="10,6"
                                                Background="#E7FFF4"
                                                IsVisible="{Binding Hit}"
                                                Stroke="{StaticResource Border}"
                                                StrokeShape="RoundRectangle 999"
                                                StrokeThickness="1">
                                                <Grid ColumnDefinitions="Auto,6,Auto" VerticalOptions="Center">
                                                    <Path
                                                        Data="M4,12 L9,17 L20,6"
                                                        HeightRequest="14"
                                                        Stroke="#16A34A"
                                                        StrokeThickness="2"
                                                        WidthRequest="14" />
                                                    <Label
                                                        Grid.Column="2"
                                                        StyleClass="ai-caption"
                                                        Text="Hit"
                                                        TextColor="#166534" />
                                                </Grid>
                                            </Border>

                                            <!--  miss  -->
                                            <Border
                                                Padding="10,6"
                                                Background="#FFEAEA"
                                                IsVisible="{Binding Hit, Converter={StaticResource Not}}"
                                                Stroke="{StaticResource Border}"
                                                StrokeShape="RoundRectangle 999"
                                                StrokeThickness="1">
                                                <Grid ColumnDefinitions="Auto,6,Auto" VerticalOptions="Center">
                                                    <Path
                                                        Data="M6,6 L18,18 M18,6 L6,18"
                                                        HeightRequest="14"
                                                        Stroke="#DC2626"
                                                        StrokeThickness="2"
                                                        WidthRequest="14" />
                                                    <Label
                                                        Grid.Column="2"
                                                        StyleClass="ai-caption"
                                                        Text="Miss"
                                                        TextColor="#991B1B" />
                                                </Grid>
                                            </Border>
                                        </Grid>
                                    </Grid>

                                    <!--  right rail (fixed 76)  -->
                                    <Grid
                                        Grid.RowSpan="3"
                                        Grid.Column="2"
                                        HeightRequest="64"
                                        RowDefinitions="Auto,*">
                                        <!--  top-right rating (+)  -->
                                        <Border
                                            Grid.Row="0"
                                            HorizontalOptions="End"
                                            StyleClass="ai-fab-ghost-flat"
                                            VerticalOptions="Start">
                                            <Grid>
                                                <Path
                                                    Data="M12,5 V19 M5,12 H19"
                                                    HeightRequest="18"
                                                    Stroke="{StaticResource Primary}"
                                                    StrokeThickness="2"
                                                    WidthRequest="18" />
                                            </Grid>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type Pages:History}}, Path=BindingContext.RateSessionAsyncCommand}" CommandParameter="{Binding .}" />
                                            </Border.GestureRecognizers>
                                        </Border>
                                    </Grid>

                                </Grid>
                            </Border>
                        </Grid>

                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
