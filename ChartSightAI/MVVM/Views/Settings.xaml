<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ChartSightAI.MVVM.Views.Settings"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Background="{StaticResource Brush.BackgroundGradient}"
    Shell.NavBarIsVisible="True">
    <!--  Main Content Grid  -->
    <Grid VerticalOptions="Start">
        <VerticalStackLayout Padding="20" Spacing="20">

            <!--  ===== Top Header Section (User Profile) =====  -->
            <Border
                Margin="0,0,0,20"
                Padding="15"
                Background="{StaticResource Brush.CardBgGradient}"
                Shadow="{StaticResource Sh.CardShadow}"
                Stroke="{StaticResource Border}"
                StrokeShape="RoundRectangle 20"
                StrokeThickness="1">

                <HorizontalStackLayout Spacing="15" VerticalOptions="Center">

                    <!--  User Avatar  -->
                    <Border
                        BackgroundColor="{StaticResource Secondary}"
                        HeightRequest="50"
                        Stroke="{StaticResource Border}"
                        StrokeShape="Ellipse"
                        StrokeThickness="1"
                        VerticalOptions="Center"
                        WidthRequest="50">
                        <Label
                            FontFamily="NexaHeavy"
                            FontSize="20"
                            HorizontalTextAlignment="Center"
                            Text="JD"
                            TextColor="{StaticResource Primary}"
                            VerticalTextAlignment="Center" />
                    </Border>

                    <!--  User Info  -->
                    <VerticalStackLayout Spacing="0">
                        <HorizontalStackLayout Spacing="5">
                            <Label
                                StyleClass="h4"
                                Text="Jane Doe"
                                TextColor="{StaticResource TextDark}" />
                            <Image
                                HeightRequest="16"
                                Source="edit.png"
                                VerticalOptions="Center"
                                WidthRequest="16" />
                        </HorizontalStackLayout>
                        <Label
                            StyleClass="caption"
                            Text="janedoe@email.com"
                            TextColor="{StaticResource TextLight}" />
                    </VerticalStackLayout>

                </HorizontalStackLayout>

            </Border>

            <!--  ===== Main Settings Content =====  -->

            <!--  ===== Appearance Section =====  -->
            <Label
                Margin="0,0,0,10"
                StyleClass="h4"
                Text="Appearance" />

            <Border
                Margin="0,0,0,15"
                Padding="15"
                BackgroundColor="{StaticResource CardBg}"
                Stroke="{StaticResource Border}"
                StrokeShape="RoundRectangle 15"
                StrokeThickness="1">

                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto">
                    <Label
                        Grid.Column="0"
                        StyleClass="body"
                        Text="Theme"
                        TextColor="{StaticResource TextDark}"
                        VerticalOptions="Center" />
                    <Switch
                        Grid.Column="1"
                        IsToggled="True"
                        OnColor="{StaticResource Primary}"
                        ThumbColor="White"
                        VerticalOptions="Center" />
                </Grid>

            </Border>

            <!--  ===== Privacy & Data Section =====  -->
            <Label
                Margin="0,0,0,10"
                StyleClass="h4"
                Text="Privacy  Data" />

            <Border
                Margin="0,0,0,15"
                Padding="15"
                BackgroundColor="{StaticResource CardBg}"
                Stroke="{StaticResource Border}"
                StrokeShape="RoundRectangle 15"
                StrokeThickness="1">

                <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                    <Image
                        HeightRequest="20"
                        Source="delete.png"
                        VerticalOptions="Center"
                        WidthRequest="20" />
                    <Label
                        StyleClass="body"
                        Text="Delete Local Data"
                        TextColor="{StaticResource TextDark}"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

            </Border>

            <!--  ===== Support / Info Section =====  -->
            <Label
                Margin="0,0,0,10"
                StyleClass="h4"
                Text="Support / Info" />

            <!--  About App  -->
            <Border
                Margin="0,0,0,5"
                Padding="15"
                BackgroundColor="{StaticResource CardBg}"
                Stroke="{StaticResource Border}"
                StrokeShape="RoundRectangle 15"
                StrokeThickness="1">

                <Grid ColumnDefinitions="*, Auto">
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Image
                            HeightRequest="20"
                            Source="info.png"
                            VerticalOptions="Center"
                            WidthRequest="20" />
                        <Label
                            StyleClass="body"
                            Text="About App"
                            TextColor="{StaticResource TextDark}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Label
                        Grid.Column="1"
                        StyleClass="caption"
                        Text="v1.0.0"
                        TextColor="{StaticResource TextLight}"
                        VerticalOptions="Center" />
                </Grid>

            </Border>

            <!--  Contact / Feedback  -->
            <Border
                Margin="0,0,0,5"
                Padding="15"
                BackgroundColor="{StaticResource CardBg}"
                Stroke="{StaticResource Border}"
                StrokeShape="RoundRectangle 15"
                StrokeThickness="1">

                <Grid ColumnDefinitions="*, Auto">
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Image
                            HeightRequest="20"
                            Source="chat.png"
                            VerticalOptions="Center"
                            WidthRequest="20" />
                        <Label
                            StyleClass="body"
                            Text="Contact / Feedback"
                            TextColor="{StaticResource TextDark}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Image
                        Grid.Column="1"
                        HeightRequest="16"
                        Source="arrow_right.png"
                        VerticalOptions="Center"
                        WidthRequest="16" />
                </Grid>

            </Border>

            <!--  Rate App  -->
            <Border
                Margin="0,0,0,15"
                Padding="15"
                BackgroundColor="{StaticResource CardBg}"
                Stroke="{StaticResource Border}"
                StrokeShape="RoundRectangle 15"
                StrokeThickness="1">

                <Grid ColumnDefinitions="*, Auto">
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Image
                            HeightRequest="20"
                            Source="star.png"
                            VerticalOptions="Center"
                            WidthRequest="20" />
                        <Label
                            StyleClass="body"
                            Text="Rate App"
                            TextColor="{StaticResource TextDark}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <Image
                        Grid.Column="1"
                        HeightRequest="16"
                        Source="arrow_right.png"
                        VerticalOptions="Center"
                        WidthRequest="16" />
                </Grid>

            </Border>

            <!--  ===== Bottom Logout Button =====  -->
            <Button
                Margin="0,10,0,0"
                Background="{StaticResource Brush.ButtonGradient}"
                CornerRadius="25"
                FontFamily="NexaHeavy"
                FontSize="18"
                HorizontalOptions="Fill"
                Text="Logout"
                TextColor="White"
                VerticalOptions="Center" />

        </VerticalStackLayout>
    </Grid>

</ContentPage>