<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ChartSightAI.MVVM.Views.NewPreset"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sf="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
    xmlns:vm="clr-namespace:ChartSightAI.MVVM.ViewModels"
    x:DataType="vm:NewPresetVM"
    Background="{StaticResource Brush.BackgroundGradient}"
    Shell.NavBarIsVisible="False">

    <AbsoluteLayout>

        <!--  Waves BEHIND layout (no hit, no layout impact)  -->
        <Grid
            AbsoluteLayout.LayoutBounds="0,0,1,240"
            AbsoluteLayout.LayoutFlags="XProportional,WidthProportional"
            HeightRequest="240"
            ZIndex="-1">
            <shapes:Path
                Aspect="Fill"
                Data="M0,0 L0,160 Q180,210 360,160 T720,160 L720,0 Z"
                Fill="{StaticResource Brush.HeaderGradient}"
                Opacity="1" />
            <shapes:Path
                Aspect="Fill"
                Data="M0,0 L0,175 Q180,225 360,175 T720,175 L720,0 Z"
                Fill="White"
                Opacity="0.12" />
        </Grid>

        <!--  Foreground  -->
        <Grid
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            RowDefinitions="Auto,*"
            RowSpacing="0">

            <!--  ===== HEADER (unchanged) =====  -->
            <Border
                Grid.Row="0"
                Margin="-10,20,24,20"
                Background="{StaticResource Brush.HeaderGradient}"
                HeightRequest="80"
                HorizontalOptions="Start"
                Shadow="{StaticResource Sh.CardShadow}"
                StrokeShape="RoundRectangle 0,50,0,50"
                StrokeThickness="0">
                <Grid
                    Padding="14,5"
                    ColumnDefinitions="Auto,*"
                    RowDefinitions="Auto,Auto">
                    <Image
                        Grid.RowSpan="2"
                        Margin="0,0,10,0"
                        HeightRequest="35"
                        HorizontalOptions="End"
                        Source="arrow.png"
                        VerticalOptions="Center"
                        WidthRequest="35">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CancelCommand}" />
                        </Image.GestureRecognizers>
                    </Image>

                    <VerticalStackLayout
                        Grid.Column="1"
                        HorizontalOptions="End"
                        Spacing="2"
                        VerticalOptions="Start">
                        <Label
                            StyleClass="h2"
                            Text="New Preset"
                            TextColor="{StaticResource TextDark}" />
                        <Label
                            Margin="0,0,10,0"
                            StyleClass="caption"
                            Text="Create and save a custom setup"
                            TextColor="{StaticResource TextLight}" />
                    </VerticalStackLayout>
                </Grid>
            </Border>
            <!--  ===== END HEADER =====  -->

            <!--  ===== CONTENT (split into compact cards) =====  -->
            <ScrollView
                Grid.Row="1"
                Padding="24,0,24,120"
                VerticalScrollBarVisibility="Never">

                <VerticalStackLayout Spacing="14">

                    <!--  Card: Preset details  -->
                    <Border StyleClass="na-card">
                        <VerticalStackLayout Padding="14" Spacing="12">
                            <Label StyleClass="h4" Text="Preset details" />

                            <sf:SfTextInputLayout
                                ContainerType="Outlined"
                                Hint="Preset name"
                                Stroke="Cyan">
                                <Entry
                                    ClearButtonVisibility="WhileEditing"
                                    FontSize="14"
                                    HeightRequest="35"
                                    Text="{Binding PresetName, Mode=TwoWay}"
                                    VerticalTextAlignment="Center" />
                            </sf:SfTextInputLayout>

                            <sf:SfTextInputLayout
                                ContainerType="Outlined"
                                Hint="Description"
                                Stroke="Cyan">
                                <Entry
                                    ClearButtonVisibility="WhileEditing"
                                    FontSize="14"
                                    HeightRequest="35"
                                    Text="{Binding Description, Mode=TwoWay}"
                                    VerticalTextAlignment="Center" />
                            </sf:SfTextInputLayout>
                        </VerticalStackLayout>
                    </Border>


                    <!--  Card: Market  -->
                    <Border StyleClass="na-card">
                        <VerticalStackLayout Padding="14" Spacing="12">
                            <Label StyleClass="h4" Text="Market type" />
                            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                                <Button
                                    Command="{Binding SetMarketTypeCommand}"
                                    CommandParameter="Forex"
                                    StyleClass="na-chip"
                                    Text="Forex">
                                    <Button.Triggers>
                                        <DataTrigger
                                            Binding="{Binding IsForexSelected}"
                                            TargetType="Button"
                                            Value="True">
                                            <Setter Property="Background" Value="{StaticResource Brush.ButtonGradient}" />
                                            <Setter Property="TextColor" Value="White" />
                                            <Setter Property="BorderWidth" Value="0" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                                <Button
                                    Grid.Column="1"
                                    Command="{Binding SetMarketTypeCommand}"
                                    CommandParameter="Stocks"
                                    StyleClass="na-chip"
                                    Text="Stocks">
                                    <Button.Triggers>
                                        <DataTrigger
                                            Binding="{Binding IsStocksSelected}"
                                            TargetType="Button"
                                            Value="True">
                                            <Setter Property="Background" Value="{StaticResource Brush.ButtonGradient}" />
                                            <Setter Property="TextColor" Value="White" />
                                            <Setter Property="BorderWidth" Value="0" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                                <Button
                                    Grid.Column="2"
                                    Command="{Binding SetMarketTypeCommand}"
                                    CommandParameter="Crypto"
                                    StyleClass="na-chip"
                                    Text="Crypto">
                                    <Button.Triggers>
                                        <DataTrigger
                                            Binding="{Binding IsCryptoSelected}"
                                            TargetType="Button"
                                            Value="True">
                                            <Setter Property="Background" Value="{StaticResource Brush.ButtonGradient}" />
                                            <Setter Property="TextColor" Value="White" />
                                            <Setter Property="BorderWidth" Value="0" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Grid>
                        </VerticalStackLayout>
                    </Border>

                    <!--  Card: Timeframe  -->
                    <Border StyleClass="na-card">
                        <VerticalStackLayout Padding="14" Spacing="12">
                            <Label StyleClass="h4" Text="Time frame" />
                            <Border StyleClass="na-field">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                    <Picker
                                        Title="Select timeframe"
                                        ItemDisplayBinding="{Binding Label}"
                                        ItemsSource="{Binding TimeFrameChoices}"
                                        SelectedItem="{Binding SelectedTimeFrameOption, Mode=TwoWay}"
                                        StyleClass="na-picker" />
                                    <Label
                                        Grid.Column="1"
                                        Text="â–¾"
                                        VerticalOptions="Center" />
                                </Grid>
                            </Border>
                        </VerticalStackLayout>
                    </Border>

                    <!--  Card: Direction  -->
                    <Border StyleClass="na-card">
                        <VerticalStackLayout Padding="14" Spacing="12">
                            <Label StyleClass="h4" Text="Trade direction" />
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                                <Button
                                    Command="{Binding SetTradeDirectionCommand}"
                                    CommandParameter="Long"
                                    StyleClass="na-chip"
                                    Text="Long">
                                    <Button.Triggers>
                                        <DataTrigger
                                            Binding="{Binding IsLongSelected}"
                                            TargetType="Button"
                                            Value="True">
                                            <Setter Property="Background" Value="{StaticResource Brush.ButtonGradient}" />
                                            <Setter Property="TextColor" Value="White" />
                                            <Setter Property="BorderWidth" Value="0" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                                <Button
                                    Grid.Column="1"
                                    Command="{Binding SetTradeDirectionCommand}"
                                    CommandParameter="Short"
                                    StyleClass="na-chip"
                                    Text="Short">
                                    <Button.Triggers>
                                        <DataTrigger
                                            Binding="{Binding IsShortSelected}"
                                            TargetType="Button"
                                            Value="True">
                                            <Setter Property="Background" Value="{StaticResource Brush.ButtonGradient}" />
                                            <Setter Property="TextColor" Value="White" />
                                            <Setter Property="BorderWidth" Value="0" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Grid>
                        </VerticalStackLayout>
                    </Border>

                    <!--  Card: Indicators (slidable row)  -->
                    <Border StyleClass="na-card">
                        <VerticalStackLayout Padding="14" Spacing="12">
                            <Label StyleClass="h4" Text="Indicators" />
                            <ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
                                <HorizontalStackLayout BindableLayout.ItemsSource="{Binding AllIndicators}" Spacing="8">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate x:DataType="x:String">
                                            <Button
                                                InputTransparent="True"
                                                IsEnabled="False"
                                                StyleClass="na-badge"
                                                Text="{Binding .}" />
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </HorizontalStackLayout>
                                <ScrollView.Triggers>
                                    <DataTrigger
                                        Binding="{Binding AllIndicators.Count}"
                                        TargetType="ScrollView"
                                        Value="0">
                                        <Setter Property="IsVisible" Value="False" />
                                    </DataTrigger>
                                </ScrollView.Triggers>
                            </ScrollView>
                        </VerticalStackLayout>
                    </Border>

                </VerticalStackLayout>
            </ScrollView>
            <!--  ===== END CONTENT =====  -->
        </Grid>

        <!--  ===== FIXED BOTTOM ACTION BAR (icons + text) =====  -->
        <Grid
            Padding="16,10"
            AbsoluteLayout.LayoutBounds="0.5,1,1,74"
            AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
            BackgroundColor="#F9FFFFFF"
            ColumnDefinitions="*,12,*"
            ZIndex="1000">

            <Border
                Grid.ColumnSpan="3"
                Background="White"
                Opacity="0.95"
                Shadow="{StaticResource Sh.CardShadow}"
                StrokeShape="RoundRectangle 22"
                StrokeThickness="0" />

            <Button
                Grid.Column="0"
                BackgroundColor="#F2F3F5"
                Command="{Binding CancelCommand}"
                CornerRadius="10"
                HeightRequest="48"
                StyleClass="na-cta"
                Text="Cancel"
                TextColor="{StaticResource TextDark}" />

            <Button
                Grid.Column="2"
                Background="{StaticResource Brush.ButtonGradient}"
                Command="{Binding SaveCommand}"
                CornerRadius="10"
                HeightRequest="48"
                StyleClass="na-cta"
                Text="Save preset"
                TextColor="White" />
        </Grid>

    </AbsoluteLayout>
</ContentPage>
