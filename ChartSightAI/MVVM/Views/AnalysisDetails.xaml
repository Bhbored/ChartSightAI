<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ChartSightAI.MVVM.Views.AnalysisDetails"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:ChartSightAI.Converters"
    xmlns:sfe="clr-namespace:Syncfusion.Maui.Expander;assembly=Syncfusion.Maui.Expander"
    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
    Background="{StaticResource Brush.BackgroundGradient}"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <conv:TradeIdeaToTextConverter x:Key="TradeIdeaToText" />
        <conv:SupportResistanceToTextConverter x:Key="SRToText" />
    </ContentPage.Resources>

    <!--  bind to the page (code-behind exposes props/commands)  -->
    <ContentPage.BindingContext>
        <x:Reference Name="Root" />
    </ContentPage.BindingContext>

    <Grid x:Name="Root" RowDefinitions="Auto,*,Auto">
        <!--  Top wave background (behind header + content)  -->
        <Grid
            Grid.Row="0"
            HeightRequest="240"
            VerticalOptions="Start">
            <!--  Wave 1  -->
            <shapes:Path
                Aspect="Fill"
                Data="M0,0 L0,160 Q180,210 360,160 T720,160 L720,0 Z"
                Fill="{StaticResource Brush.HeaderGradient}"
                HorizontalOptions="Fill"
                InputTransparent="True"
                Opacity="1"
                VerticalOptions="Fill" />

            <!--  Subtle overlay wave for depth  -->
            <shapes:Path
                Aspect="Fill"
                Data="M0,0 L0,175 Q180,225 360,175 T720,175 L720,0 Z"
                Fill="White"
                HorizontalOptions="Fill"
                InputTransparent="True"
                Opacity="0.12"
                VerticalOptions="Fill" />
        </Grid>
        <!--  ============== HEADER (clean + centered) ==============  -->
        <Grid
            Grid.Row="0"
            Padding="20,20,20,16"
            RowDefinitions="Auto,Auto,Auto">
            <!--  Title only (no back button)  -->
            <Border
                Margin="-30,0,0,0"
                Background="{StaticResource Brush.HeaderGradient}"
                HeightRequest="80"
                HorizontalOptions="Start"
                Shadow="{StaticResource Sh.CardShadow}"
                StrokeShape="RoundRectangle 0,50,0,50"
                StrokeThickness="0"
                WidthRequest="300">
                <Grid
                    Padding="14,5"
                    ColumnDefinitions="Auto,*"
                    RowDefinitions="Auto,Auto">

                    <!--  Back arrow pill (placeholder image)  -->
                    <Image
                        Grid.RowSpan="2"
                        Margin="0,0,10,10"
                        HeightRequest="35"
                        HorizontalOptions="End"
                        Source="arrow.png"
                        VerticalOptions="Center"
                        WidthRequest="35">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>

                    <VerticalStackLayout
                        Grid.Column="1"
                        HorizontalOptions="End"
                        Spacing="2"
                        VerticalOptions="Start">
                        <Label
                            StyleClass="h2"
                            Text="Analysis Details"
                            TextColor="{StaticResource TextDark}" />
                        <Label
                            Margin="0,0,10,0"
                            StyleClass="caption"
                            Text="Review outcome for this past prediction"
                            TextColor="{StaticResource TextLight}" />
                    </VerticalStackLayout>

                </Grid>
            </Border>

            <!--  Preview image card  -->
            <Border
                Grid.Row="1"
                Margin="0,16,0,0"
                Padding="0"
                StyleClass="ai-card">
                <Image
                    Aspect="AspectFill"
                    HeightRequest="180"
                    IsAnimationPlaying="True"
                    Source="{Binding HeroImage}" />

            </Border>

            <!--  Meta chips row  -->
            <Grid
                Grid.Row="2"
                Margin="0,12,0,0"
                ColumnDefinitions="*,*,*"
                ColumnSpacing="8">
                <Border StyleClass="ai-chip">
                    <Label StyleClass="ai-caption" Text="{Binding Session.MarketType}" />
                </Border>
                <Border Grid.Column="1" StyleClass="ai-chip">
                    <Label StyleClass="ai-caption" Text="{Binding Session.TimeFrame}" />
                </Border>
                <Border Grid.Column="2" StyleClass="ai-chip">
                    <Label StyleClass="ai-caption" Text="{Binding Session.CreatedAt, StringFormat='{}{0:yyyy-MM-dd}'}" />
                </Border>
            </Grid>
        </Grid>

        <!--  ================= BODY =================  -->
        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
            <VerticalStackLayout Padding="16,12" Spacing="12">

                <!--  Summary  -->
                <Border StyleClass="ai-card">
                    <sfe:SfExpander IsExpanded="True">
                        <sfe:SfExpander.Header>
                            <Grid
                                Padding="12"
                                ColumnDefinitions="Auto,*,Auto"
                                ColumnSpacing="12">
                                <Label
                                    FontSize="20"
                                    Text="ðŸ’¡"
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="1"
                                    StyleClass="h3"
                                    Text="Summary"
                                    VerticalTextAlignment="Center" />
                                <Border
                                    Grid.Column="2"
                                    IsVisible="{Binding HasConfidence}"
                                    StyleClass="ai-chip">
                                    <Label StyleClass="ai-caption" Text="{Binding ConfidenceText}" />
                                </Border>
                            </Grid>
                        </sfe:SfExpander.Header>
                        <sfe:SfExpander.Content>
                            <Grid Padding="12,0,12,12">
                                <Label
                                    LineBreakMode="WordWrap"
                                    StyleClass="ai-body"
                                    Text="{Binding Session.Result.Summary}" />
                            </Grid>
                        </sfe:SfExpander.Content>
                    </sfe:SfExpander>
                </Border>

                <!--  Trend Reanalysis  -->
                <Border StyleClass="ai-card">
                    <sfe:SfExpander>
                        <sfe:SfExpander.Header>
                            <Grid
                                Padding="12"
                                ColumnDefinitions="Auto,*"
                                ColumnSpacing="12">
                                <Label
                                    FontSize="20"
                                    Text="ðŸ“ˆ"
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="1"
                                    StyleClass="h3"
                                    Text="Trend Reanalysis"
                                    VerticalTextAlignment="Center" />
                            </Grid>
                        </sfe:SfExpander.Header>
                        <sfe:SfExpander.Content>
                            <Grid Padding="12,0,12,12">
                                <Label
                                    LineBreakMode="WordWrap"
                                    StyleClass="ai-body"
                                    Text="{Binding Session.Result.TrendAnalysis}" />
                            </Grid>
                        </sfe:SfExpander.Content>
                    </sfe:SfExpander>
                </Border>

                <!--  Support / Resistance  -->
                <Border StyleClass="ai-card">
                    <sfe:SfExpander>
                        <sfe:SfExpander.Header>
                            <Grid
                                Padding="12"
                                ColumnDefinitions="Auto,*"
                                ColumnSpacing="12">
                                <Label
                                    FontSize="20"
                                    Text="ðŸ§±"
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="1"
                                    StyleClass="h3"
                                    Text="Support / Resistance"
                                    VerticalTextAlignment="Center" />
                            </Grid>
                        </sfe:SfExpander.Header>
                        <sfe:SfExpander.Content>
                            <VerticalStackLayout Padding="12,0,12,12" Spacing="8">
                                <BindableLayout.ItemsSource>
                                    <Binding Path="Session.Result.SupportResistance" />
                                </BindableLayout.ItemsSource>
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,6,0,0"
                                            Padding="12"
                                            BackgroundColor="#F7FAFB"
                                            StrokeShape="RoundRectangle 16"
                                            StrokeThickness="0">
                                            <Label StyleClass="ai-body" Text="{Binding ., Converter={StaticResource SRToText}}" />
                                        </Border>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>
                        </sfe:SfExpander.Content>
                    </sfe:SfExpander>
                </Border>

                <!--  Trade Idea (fixed binding)  -->
                <Border StyleClass="ai-card">
                    <sfe:SfExpander>
                        <sfe:SfExpander.Header>
                            <Grid
                                Padding="12"
                                ColumnDefinitions="Auto,*"
                                ColumnSpacing="12">
                                <Label
                                    FontSize="20"
                                    Text="ðŸ’¼"
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="1"
                                    StyleClass="h3"
                                    Text="Trade Idea"
                                    VerticalTextAlignment="Center" />
                            </Grid>
                        </sfe:SfExpander.Header>
                        <sfe:SfExpander.Content>
                            <Grid Padding="12,0,12,12">
                                <Label
                                    LineBreakMode="WordWrap"
                                    StyleClass="ai-body"
                                    Text="{Binding Session.Result.TradeIdea, Converter={StaticResource TradeIdeaToText}}" />
                            </Grid>
                        </sfe:SfExpander.Content>
                    </sfe:SfExpander>
                </Border>

                <!--  Explainability  -->
                <Border StyleClass="ai-card">
                    <sfe:SfExpander>
                        <sfe:SfExpander.Header>
                            <Grid
                                Padding="12"
                                ColumnDefinitions="Auto,*"
                                ColumnSpacing="12">
                                <Label
                                    FontSize="20"
                                    Text="ðŸ§ "
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="1"
                                    StyleClass="h3"
                                    Text="Explainability"
                                    VerticalTextAlignment="Center" />
                            </Grid>
                        </sfe:SfExpander.Header>
                        <sfe:SfExpander.Content>
                            <Grid Padding="12,0,12,12">
                                <Label
                                    LineBreakMode="WordWrap"
                                    StyleClass="ai-body"
                                    Text="{Binding Session.Result.Explainability}" />
                            </Grid>
                        </sfe:SfExpander.Content>
                    </sfe:SfExpander>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
        <!--  ================= BOTTOM BAR =================  -->
        <Grid Grid.Row="2" Padding="16,8">
            <Border
                Padding="12"
                StrokeThickness="0"
                StyleClass="ai-card">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    <!--  Close instead of View Full Chart  -->
                    <Button
                        Clicked="Button_Clicked"
                        StyleClass="btn-ghost-flat"
                        Text="Close" />
                    <Button
                        Grid.Column="1"
                        Clicked="Button_Clicked_1"
                        StyleClass="btn-primary"
                        Text="Share / Export" />
                </Grid>
            </Border>
        </Grid>

    </Grid>
</ContentPage>
